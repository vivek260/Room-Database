<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" package="com.demo">

    <application
        android:name=".presentation.DatabaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitcotTechnologyAssignment"
        tools:targetApi="33">
        <activity
            android:name=".presentation.ui.login_activity.LoginActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".presentation.ui.home_activity.HomeActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".presentation.ui.signup_activity.SignupActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".presentation.ui.launcher_activity.LauncherActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>